<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>CriminalRecordsApp</display-name>
  
  <!-- Servlet Configuration -->
  <servlet>
    <servlet-name>AddCriminalRecordServlet</servlet-name>
    <servlet-class>com.criminalrecords.servlets.AddCriminalRecordServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>ViewCriminalRecordsServlet</servlet-name>
    <servlet-class>com.criminalrecords.servlets.ViewCriminalRecordsServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>EditCriminalRecordServlet</servlet-name>
    <servlet-class>com.criminalrecords.servlets.EditCriminalRecordServlet</servlet-class>
  </servlet>
  
  <!-- Servlet Mappings -->
  <servlet-mapping>
    <servlet-name>AddCriminalRecordServlet</servlet-name>
    <url-pattern>/addCriminalRecord</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ViewCriminalRecordsServlet</servlet-name>
    <url-pattern>/viewCriminalRecords</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>EditCriminalRecordServlet</servlet-name>
    <url-pattern>/editCriminalRecord</url-pattern>
  </servlet-mapping>
  
  <!-- Welcome File -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
